<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Room Number -->
        <record id="seq_hotel_room" model="ir.sequence">
            <field name="name">Room Number</field>
            <field name="code">hotel.room</field>
            <field name="padding">4</field>
        </record>
        <!-- Sequence for Reservation Number -->
        <record id="seq_hotel_reservation" model="ir.sequence">
            <field name="name">Hotel Reservation</field>
            <field name="code">hotel.reservation</field>
            <field name="prefix">RES</field>
            <field name="padding">4</field>
        </record>
         <!-- Sequence for Client Number -->
        <record id="seq_hotel_client" model="ir.sequence">
            <field name="name">Hotel Client</field>
            <field name="code">hotel.client</field>
            <field name="prefix">CLT</field>
            <field name="padding">4</field>
        </record>
    </data>
</odoo>
